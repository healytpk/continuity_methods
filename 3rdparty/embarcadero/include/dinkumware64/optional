	return (_Right < _Left);
	}

template<class _Ty,
	class _Uty>
	_CONST_FUN bool operator<=(const optional<_Ty>& _Left,
		const optional<_Uty>& _Right)
	{	// test if _Left <= _Right
	return (!(_Right < _Left));
	}

template<class _Ty,
	class _Uty>
	_CONST_FUN bool operator<=(const optional<_Ty>& _Left,
		const _Uty& _Right)
